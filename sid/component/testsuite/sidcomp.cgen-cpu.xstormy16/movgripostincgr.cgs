# xstormy16 testcase for mov$ws2 ($Rs++),$Rdm -*- Asm -*-
# mach: all

	.include "testutils.inc"

	start

	.data
data:	.byte 0xfa,0xce,0xde,0xad
	.text

	.global movgripostincgr
movgripostincgr:
	mov    r1, #data
	mov    r2, #0xfc
	mov.b  (r1++), r2		; fc ce de ad
	mov.w  r2, (r1)
	assert r2, 0xcefc

	mov    r2, #0xae
	add    r1, #1
	mov.b  (r1++), r2		; fc ce ae ad
	mov.w  r2, (r1, -1)
	assert r2, 0xadae

	br okay

wrong:
	fail
okay:
	pass
